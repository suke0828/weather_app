<%= provide(:title, prefecture.name) %>
<div class="card">
	<div class="card-header">
		<div class="card-body">
			<%= render 'shared/breadcrumb' %>
			<%= render 'shared/archives' %>
			<table class="table table-hover" id="dataTable" width="100%">
				<thead>
					<tr>
						<th>日付</th>
						<th>天気</th>
						<th>天気icon</th>
						<th>気温</th>
					</tr>
				</thead>
				<tbody class="fw-bold">
					<% show.each do |weather_report| %>
					<tr style="color: <%= weather_color(weather_report)%>">
						<td class="border-left"><%= l weather_report.dated_on, format: :short %></td>
						<td class="border-none"><%= weather_report.weather %></td>
						<td class="border-none"><img alt="weather"
								src="https://openweathermap.org/img/w/<%=weather_report.weather_icon%>.png">
						</td>
						<td class="border-right"><%= weather_report.temperature %>℃</td>
					</tr>
					<% end %>
				</tbody>
			</table>
			<%= render 'shared/back_button' %>
		</div>
	</div>
</div>
